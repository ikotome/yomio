{
  "manifest_version": 3,
  "name": "Ghost Viewer",
  "version": "1.0",
  "description": "ユーザーが見ている画面内をゴーストがふわふわ動く拡張",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/supabase.min.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/ghost.svg", "config.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
